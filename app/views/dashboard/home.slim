#page-wrapper
  .row
    .col-lg-12
      h1.page-header Dashboard
    /! /.col-lg-12
  /! /.row
  .row
    .col-lg-3.col-md-6
      .panel.panel-primary
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-comments-o.fa-5x
            .col-xs-9.text-right
              .huge #{@dashboard_facade.clients_number}
              div Clientes
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-green
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-comments-o.fa-5x
            .col-xs-9.text-right
              .huge 12
              div New Tasks!
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-yellow
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-comments-o.fa-5x
            .col-xs-9.text-right
              .huge 124
              div New Orders!
            .clearfix
    - if @dashboard_facade.high_priority_tickets_count
      .col-lg-3.col-md-6
        .panel.panel-red
          .panel-heading
            .row
              .col-xs-3
                i.fa.fa-comments-o.fa-5x
              .col-xs-9.text-right
                .huge #{@dashboard_facade.high_priority_tickets_count}
                div Chamados imediatos
              .clearfix
  /! /.row
  .row
    /! /.col-lg-8
    .col-lg-12
      div class="panel panel-default"
        div class="panel-heading"
          i class="fa fa-clock-o fa-fw"
          | Chamados abertos
        div class="panel-body"
          .table-responsive
            table class="table table-striped table-bordered"
              thead
                tr
                  th Cliente
                  th Prioridade
                  th Respons√°vel
                  th Criado a
              tbody
                - @dashboard_facade.opened_tickets.each do |ticket|
                  tr
                    td= ticket.customer.name
                    td= ticket.priority.name
                    td= ticket.user.name
                    td= time_ago_in_words(ticket.created_at)
          br/
        div class="panel-body"
          = paginate @dashboard_facade.opened_tickets
